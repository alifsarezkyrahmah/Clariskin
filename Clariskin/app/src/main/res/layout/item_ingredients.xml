<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Chemical Structure Container -->
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:background="#F5F5F5">

            <!-- Chemical Structure Image -->
            <ImageView
                android:id="@+id/iv_ingredient"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_launcher_background"
                android:padding="8dp"
                tools:src="@drawable/ic_launcher_background" />
        </RelativeLayout>

        <!-- Text Information Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <!-- Chemical Name -->
            <TextView
                android:id="@+id/tv_ingredient_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Niacinamide"
                android:textColor="#2C2C2C"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"
                android:fontFamily="sans-serif-medium" />

            <!-- Chemical Description -->
            <TextView
                android:id="@+id/tv_ingredient_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet consectetur adipiscing elit. Ex"
                android:textColor="#666666"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Additional Info (Optional) -->
            <TextView
                android:id="@+id/tv_chemical_formula"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="C₆H₆N₂O"
                android:textColor="#999999"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Arrow or Action Icon (Optional) -->
        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_launcher_background"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:visibility="gone" />

    </LinearLayout>

</androidx.cardview.widget.CardView>